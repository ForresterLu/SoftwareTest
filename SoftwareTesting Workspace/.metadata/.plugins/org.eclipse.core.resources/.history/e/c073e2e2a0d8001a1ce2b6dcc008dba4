	public int convertHexadecimalToDecimalism(String hexadecimal) {
		int result = 0;
		for(int i = hexadecimal.length() - 1; i > 1; i--) {
			int valueString = Integer.valueOf(map.get(String.valueOf(hexadecimal.charAt(i))));
			result = result + valueString * caculate(hexadecimal.length() - 1 - i);
		}
		return result;
	}
	
	
	public static int caculate(int jie) {
		int mupli = 1;
		for(int i = 0; i < jie; i++) {
			mupli = mupli * 16;
		}
		return mupli;
	}
}
